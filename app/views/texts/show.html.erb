<div id ="main-container" class="container">
  <div class="row">
    <div class="col-xs-6">

      <p>
        <strong>Name:</strong>
        <%= @text.name %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @text.content %>
      </p>

      <%= link_to 'Edit', edit_text_path(@text) %> |
      <%= link_to 'Delete', @text, method: :delete, data: { confirm: 'Are you sure?' } %> |
      <%= link_to 'Back', texts_path %>
    </div>
  </div>
</div>
